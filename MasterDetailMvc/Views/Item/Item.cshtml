
@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
<!-- Font Awesome -->


<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
@*<link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">*@

<!-- Custom Theme Style -->


<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Items Page </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Settings 1</a>
                        <a class="dropdown-item" href="#">Settings 2</a>
                    </div>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row" id="AppEl">
                <div class="col-sm-12">
                    <div class="card-box table-responsive" v-show="GridShow==true">
                        <button type="button"  v-on:click="AddNew" class="btn btn-primary">Add New</button>

                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            {{khykj}}


                            <tbody>
                                

                                <tr v-for="line in itemsList">
                                    <td>{{line.varName}}</td>
                                    <td>{{line.intPrice}}</td>
                                </tr>



                            </tbody>
                        </table>
                    </div>


                    <div id="form" v-show="FormShow==true">
                        <div class="col-md-12 col-sm-12   ">
                            <button type="button" class="btn btn-primary">Cancel</button>
                        </div>
                        <div class="col-md-6 col-sm-12  form-group">
                            <label>Item Name * :</label>
                            <input v-model="varName" type="text" placeholder="Abc" class="form-control">
                        </div>

                        <div class="col-md-6 col-sm-12  form-group">
                            <label>Item Price * :</label>

                            <input v-model="intPrice" type="text" placeholder="$" class="form-control">
                        </div>

                        <div class="col-md-12 col-sm-12 offset-md-11  form-group">
                            <button v-on:click="Add" type="button" class="btn btn-success">    Add Item  </button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/vendors/jquery/dist/jquery.min.js"></script>
<script src="~/Scripts/vue.js"></script>
<script src="~/vendors/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/JS/Item.js"></script>
